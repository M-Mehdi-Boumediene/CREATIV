{% extends 'base.html.twig' %}

{% block body %}
    <h1>Logos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ logo.id }}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if logo.updateAt %}{{ logo.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ logo.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ logo.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_logos_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_logos_edit', { 'id': logo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
